<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title><%= league.liga_nome %></title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-md-4 text-center">
                <%- include(`../assets/ligas_logo/${leagueId}.svg`) %>
                <h1 class="mt-3"><%= league.liga_nome %></h1>
                <p>Hello world</p>
            </div>
        </div>  

        <div class="row justify-content-center mt-5">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Club Name</th>
                                <th scope="col">Rating</th>
                                <th scope="col">Points</th>
                                <th scope="col">Victories</th>
                                <th scope="col">Losses</th>
                                <th scope="col">Draws</th>
                                <th scope="col">Goals Scored</th>
                                <th scope="col">Goals Suffered</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% clubs.forEach(function(club, index) { %>
                                <tr>
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><%= club.nome %></td>
                                    <td><%= club.rating %></td>
                                    <td><%= club.pontos %></td>
                                    <td><%= club.vitorias %></td>
                                    <td><%= club.derrotas %></td>
                                    <td><%= club.empates %></td>
                                    <td><%= club.golos_marcados %></td>
                                    <td><%= club.golos_sofridos %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-12 text-center">
                <button type="button" class="btn btn-outline-primary">Simular jogos</button>
                <button type="button" class="btn btn-outline-secondary" onclick="window.location.href = '/';">Voltar</button>
            </div>
        </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
</body>
</html>
